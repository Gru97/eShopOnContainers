@model LoginViewModel

<div class="login-page rtl-direction">
    <div class="page-header text-center">
        <h2>ورود به حساب کاربری</h2>
    </div>

    <partial name="_ValidationSummary" />

    <div class="row">
        @if (Model.EnableLocalLogin)
        {
            <div class="col-sm-4"></div>
            <div class="col-sm-4">
                <div class="panel panel-default">
                    @*<div class="panel-heading">
                        <h3 class="panel-title">ورود</h3>
                    </div>*@
                    <div class="panel-body">
                        <form asp-route="Login">
                            <input type="hidden" asp-for="ReturnUrl" />
                            <fieldset>
                                <div class="form-group">
                                    <label asp-for="Username" class="float-lg-right font-weight-bold">نام کاربری</label>
                                    <input class="form-control" placeholder="نام کاربری" asp-for="Username" autofocus>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Password" class="float-lg-right font-weight-bold">رمز عبور</label>
                                    <input type="password" class="form-control" placeholder="رمز عبور " asp-for="Password" autocomplete="off">
                                </div>
                                @if (Model.AllowRememberLogin)
                                {
                                    <div class="form-group login-remember">
                                        <label asp-for="RememberLogin" class="float-lg-right font-weight-bold">
                                            <input asp-for="RememberLogin">
                                            <strong>مرا به خاطر بسپار</strong>
                                        </label>
                                    </div>
                                }
                                <button class=" btn-login text-center" name="button" value="login">ورود</button>

                                <div>
                                    <p>Pass123$ </p>
                                </div>
                                <div class="form-group">
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-sm-4"></div>

        }
        @*@if (Model.VisibleExternalProviders.Any())
        {
            <div class="col-md-6 col-sm-6 external-providers">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">لاگین با اکانت ایمیل</h3>
                    </div>
                    <div class="panel-body">
                        <ul class="list-inline">
                            @foreach (var provider in Model.VisibleExternalProviders)
                            {
                                <li>
                                    <a class="btn btn-default"
                                       asp-controller="External"
                                       asp-action="Challenge"
                                       asp-route-provider="@provider.AuthenticationScheme"
                                       asp-route-returnUrl="@Model.ReturnUrl">
                                        @provider.DisplayName
                                    </a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        }*@
        @if (!Model.EnableLocalLogin && !Model.VisibleExternalProviders.Any())
        {
            <div class="alert alert-warning">
                <strong>نام کاربری یا رمز عبور صحیح نمی باشد.</strong>
             
            </div>
        }
    </div>
</div>