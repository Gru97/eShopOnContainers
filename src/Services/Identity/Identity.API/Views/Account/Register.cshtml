@model Identity.API.ViewModels.Account.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<div class="login-page rtl-direction">
    <div class="page-header text-center">
        <h2> ایجاد حساب کاربری</h2>
    </div>

    <div class="row">
        <div class="col-md-4"></div>

        <div class="col-md-4">
            <form asp-action="Register">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Email" class="float-lg-right font-weight-bold">پست الکترونیک</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="float-lg-right font-weight-bold">رمز عبور</label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword" class="float-lg-right font-weight-bold">تکرار رمز عبور</label>
                    <input asp-for="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="ثبت نام" class="btn btn-primary float-lg-right" />
                </div>
            </form>
        </div>
        <div class="col-md-4"></div>

    </div>
</div>


    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
